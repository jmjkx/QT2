{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Debug (MSVC)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Visual Studio 17 2022",
                "-A",
                "x64"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Configure CMake with MSVC (Debug)"
        },
        {
            "label": "Configure Release (MSVC)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Visual Studio 17 2022",
                "-A",
                "x64"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Configure CMake with MSVC (Release)"
        },
        {
            "label": "Build Debug (MSVC)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build Debug with MSVC"
        },
        {
            "label": "Build Release (MSVC)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build Release with MSVC"
        },
        {
            "label": "Clean (MSVC)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "Full Clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "if exist build (rmdir /s /q build) else (echo Build directory does not exist)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Delete entire build directory"
        },
        {
            "label": "Configure and Build Debug (MSVC)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Configure Debug (MSVC)",
                "Build Debug (MSVC)"
            ],
            "problemMatcher": [],
            "detail": "Configure and build Debug"
        }
    ]
}
